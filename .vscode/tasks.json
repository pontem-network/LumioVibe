{
    "version": "2.0.0",
    "tasks": [
        // build project
        {
            "label": "build project",
            "type": "shell",
            "command": "make build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
        },
        // build runtime
        {
            "label": "build runtime",
            "type": "shell",
            "command": "make build-runtime",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
        },
        // run: backend
        {
            "label": "run: backend",
            "type": "shell",
            "command": "make start-backend",
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "options": {
                "env": {
                    "LLM_MODEL": "ollama/deepseek-r1:1.5b",
                    "LLM_BASE_URL": "http://192.168.3.4:11434",
                    "LLM_API_KEY": "-",
                    "LLM_INPUT_COST_PER_TOKEN": "2",
                    "LLM_OUTPUT_COST_PER_TOKEN": "3",
                    // "LOG_ALL_EVENTS": "1",
                    "LUMIO_RPC_URL": "https://api.testnet.lumio.io/",
                    "LUMIO_CHAIN_ID": "2",
                    "VIBE_BALANCE_CONTRACT": "0x9ba3255c39f9459c053e5768783b5f21e6610a8fdb6699be269495340d1d7597"
                }
            }
        },
        // run: frontend
        {
            "label": "run: frontend",
            "type": "shell",
            "command": "make start-frontend",
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "options": {
                "env": {
                    "LOG_ALL_EVENTS": "1",
                    "VITE_LUMIO_RPC_URL": "https://api.testnet.lumio.io/",
                    "VITE_LUMIO_CHAIN_ID": "2",
                    "VITE_VIBE_BALANCE_CONTRACT": "0x9ba3255c39f9459c053e5768783b5f21e6610a8fdb6699be269495340d1d7597"
                }
            }
        },
        // run: lumio
        {
            "label": "run: lumio",
            "type": "shell",
            "command": "lumio node run-localnet --with-faucet --test-dir .local_node --assume-yes",
            "options": {
                "env": {
                    "RUST_LOG": "debug"
                }
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
        },
        // mint
        {
            "label": "mint",
            "type": "shell",
            "command": [
                "echo '\n# # # OWNER # # #\n';",
                "lumio account balance;",
                "lumio account fund-with-faucet --amount 100000000;",
                "lumio account balance;",
                "echo '\n# # # Wallet # # #\n';",
                "lumio account balance --account 0xe6c88958b7a01cc9949325a032337ab8ea8cc20e8c4353561e7a9ff1fc55f3c4;",
                "lumio account fund-with-faucet --amount 100000000 --account 0xe6c88958b7a01cc9949325a032337ab8ea8cc20e8c4353561e7a9ff1fc55f3c4;",
                "lumio account balance --account 0xe6c88958b7a01cc9949325a032337ab8ea8cc20e8c4353561e7a9ff1fc55f3c4;",
            ],
            "options": {
                "cwd": "contracts/vibe-balance/"
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
        },
        // contract: deploy
        {
            "label": "contract: deploy",
            "type": "shell",
            "command": [
                "./scripts/deploy.sh;",
            ],
            "options": {
                "cwd": "contracts/vibe-balance/",
                "env": {
                    "LUMIO_NETWORK": "testnet"
                }
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
        },
        // contract: init
        {
            "label": "contract: init",
            "type": "shell",
            "command": [
                "./scripts/deploy.sh --init;",
            ],
            "options": {
                "cwd": "contracts/vibe-balance/",
                "env": {
                    "LUMIO_NETWORK": "testnet"
                }
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
        },
    ]
}
